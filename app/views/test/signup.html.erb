
<center>
	<h1> Enter Your Details </h1>

	<%= form_for @t , url:{action: 'register'} do |f| %>

		<% if @t.errors.any? %> 
				<% @t.errors.full_messages.each do |error| %>
					<p><%= error %></p>
				<% end -%> 
		 <% end -%>
		
		<table >
			<tr>	
				<td><%= f.label "FIRSTNAME" %>	</td>
				<td> <%= f.text_field :fname %>   </td>
			</tr>
			<tr>	
				<td><%= f.label "LASTNAME" %>	</td>
				<td> <%= f.text_field :lname %>   </td>
			</tr>

			<tr>
				<td><%= f.label "EMAIL" %></td>
				<td><%= f.email_field :email %></td>
			</tr>

			<tr>
				<td><%= f.label "PHONE NUMBER" %></td>
				<td><%= f.number_field :phno %></td>
			</tr>

			<tr>
				<td><%= f.label "BRANCH" %></td>
				<td><%= f.text_field :branch %></td>
			</tr>

			<tr>
				<td><%= f.label "ADDRESS" %></td>
				<td><%= f.text_field :address %></td>
			</tr>
			<tr>	
				<td></td><td><%= f.submit %></td>
			</tr> 
		</table>
		
	<% end %>
</center>
 